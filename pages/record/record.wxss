/* pages/record/record.wxss */
.headarea{
  height: 40px;
  width: 100%;
  background-color:darkorange;
}
.headarea text{
  font-size: 25px;
  color:crimson;
  position: relative;
  left: 40%;
}
.historyoption{
  height: 60px;
  width: 100%;
  background-color:rgb(0, 255, 255);
  margin-top: 10px;
  margin-bottom: 10px;
}
.time{
  font-size: 20px;
  float: left;
}
.price{
  font-size: 20px;
  float: right;
}
.tips{
  font-size: 15px;
  float: right;
  position: relative;
  bottom: -10px;
  color: blue;
}
.delete button{
  height: 30px;
  width: 100%;
  background-color:dodgerblue;
  float: right;
  position: fixed;
  bottom: 0px;
  margin-bottom:5px;
}
.delete text{
  margin: 0px;
  font-size: 20px;
  position: relative;
  top: -10px;
}